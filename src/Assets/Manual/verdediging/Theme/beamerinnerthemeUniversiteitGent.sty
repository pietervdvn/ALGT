\mode<presentation>

\defbeamertemplate*{title page}{ugent theme}
{
  \begin{center}
    %\pgfuseimage{logo}%
    %\vskip1cm
    \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle%
    \ifx\insertsubtitle\@empty%
    \else%
      \vskip2ex%
      \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle%
    \fi%
    \ifx\insertauthor\@empty%
    \else%
      \vskip2ex%
      \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor%
    \fi%
    \ifx\insertinstitution\@empty%
    \else%
      \vskip2ex%
      \usebeamerfont{author}\usebeamercolor[fg]{author}\insertinstitute%
    \fi%
  \end{center}
  \vfill%
}

